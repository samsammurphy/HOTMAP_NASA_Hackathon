// fire features
var fire1 = ee.Geometry.Point(-116.19, 38.75)
var fire2 = ee.Geometry.Point(-105.21, 34.96)
var fire3 = ee.Geometry.Point(-86.84, 44.34)

// volcano (hawaii)
var volcano = ee.Geometry.Point(-155.2286, 19.4329)


// fire feature collection
var hotThings = ee.FeatureCollection([
  ee.Feature(fire1,{}),
  ee.Feature(fire2,{}),
  ee.Feature(fire3,{}),
  ee.Feature(volcano,{})
  ])

Map.addLayer(hotThings)